model User {
  id           String        @id @default(cuid())
  googleId     String        @unique
  email        String        @unique
  name         String
  role         UserRole
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  activityLogs ActivityLog[]

  @@map("User")
}

enum UserRole {
  RECRUITER
  CANDIDATE
}
